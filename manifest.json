{
  "manifest_version": 3,
  "name": "Make Reddit Profiles Public Again",
  "version": "1.1.0",
  "description": "Automatically fills in private Reddit user profiles with data from Reddit search",
  "permissions": [],
  "host_permissions": [
    "https://www.reddit.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.reddit.com/user/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "firefox.eatery385@passinbox.com",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
            "required": ["none"]
      }
    }
  }
}
